<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02AAB0">

    <TextView
        android:id="@+id/fragment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rounded_text_view"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintStart_toEndOf="@+id/button_minus" />

    <ImageButton
        android:id="@+id/button_minus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_plus_minus"
        app:srcCompat="@drawable/icon_minus_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/button_plus"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_plus_minus"
        app:srcCompat="@drawable/icon_plus_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/buttonCreateNewNotification"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/rounded_button_create_new_notification"
        android:text="@string/create_new_notification"
        app:layout_constraintBottom_toTopOf="@+id/fragment_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>